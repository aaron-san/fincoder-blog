{
  "name": "fincoder-blog",
  "homepage": "https://yourusername.github.io/fincoder-blog",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "tree": "tree -I \"node_modules|.git|.next\" -L 3 > tree.txt",
    "verify": "npm install --package-lock-only && npm audit && npm outdated",
    "clean": "rimraf .next out pnpm-lock.yaml node_modules",
    "dev": "next dev -p 3021",
    "serve": "node server/serve.js",
    "clean-dev": "riraf .next && next dev",
    "nojekyll": "echo. > ./out/.nojekyll",
    "build": "next build",
    "clean-build": "rimraf .next out pnpm-lock.yaml && npm run build",
    "deploy": "gh-pages -d out"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^13.5.11",
    "cheerio": "^1.1.2",
    "gray-matter": "^4.0.3",
    "katex": "^0.16.22",
    "next": "^13.5.11",
    "next-mdx-remote": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "tailwind-scrollbar-hide": "^2.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.14.1",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.24.0",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.1",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  }
}
